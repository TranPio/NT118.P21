<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="30dp"
    android:gravity="center_horizontal"
    tools:context="Lab5_Login"> <TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Đăng nhập API (Lab 5)"
    android:textSize="24sp"
    android:textColor="#0000FF"
    android:textStyle="bold"
    android:layout_marginBottom="40dp"/>

    <EditText
        android:id="@+id/edtLoginUsername_lab5" android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Tên đăng nhập"
        android:layout_marginBottom="15dp"/>

    <EditText
        android:id="@+id/edtLoginPassword_lab5" android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Mật khẩu"
        android:inputType="textPassword"
        android:layout_marginBottom="15dp"/>

    <androidx.appcompat.widget.AppCompatCheckBox
        android:id="@+id/chkLoginRememberMe_lab5" android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nhớ đăng nhập"
        android:textSize="17sp"
        android:layout_gravity="start"
        android:layout_marginBottom="25dp"
        app:buttonTint="#5A5A5B" />

    <Button
        android:id="@+id/btnLoginConfirm_lab5" android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ĐĂNG NHẬP"
        android:backgroundTint="#5A5A5B"/>

    <TextView
        android:id="@+id/tvGoToRegister_lab5" android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Chưa có tài khoản? Đăng ký ngay!"
        android:textColor="#000000"
        android:layout_marginTop="20dp"
        android:padding="10dp"
        android:clickable="true"
        android:focusable="true" />

</LinearLayout>