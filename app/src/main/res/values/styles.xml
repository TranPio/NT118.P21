<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Base style dùng cho tất cả các nút -->
    <style name="KeyBase">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_columnWeight">1</item>
        <item name="android:layout_rowWeight">1</item>
        <item name="android:layout_margin">4dp</item>
        <item name="android:textSize">28sp</item>
        <item name="android:backgroundTint">#555555</item>
    </style>

    <!-- Style nút xám nhạt (AC, +/-) -->
    <style name="KeyGray" parent="KeyBase">
        <item name="android:textColor">#000000</item>
        <item name="android:backgroundTint">#A5A5A5</item>
    </style>

    <!-- Style nút đen (số) -->
    <style name="KeyDark" parent="KeyBase">
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:backgroundTint">#333333</item>
    </style>

    <!-- Style nút cam (dấu phép tính) -->
    <style name="KeyOrange" parent="KeyBase">
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:backgroundTint">#FF9500</item>
    </style>
</resources>
