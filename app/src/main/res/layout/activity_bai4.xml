<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    android:padding="4dp">

    <!-- Kết quả hiển thị -->
    <EditText
        android:id="@+id/edtResult"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:gravity="right|center_vertical"
        android:text="0"
        android:textColor="#FFFFFF"
        android:textSize="64sp"
        android:background="@android:color/transparent"
        android:focusable="false"
        android:cursorVisible="false"
        android:inputType="none"
        android:paddingEnd="16dp"/>

    <!-- Bảng nút bấm -->
    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="8"
        android:stretchColumns="*">

        <!-- Hàng 1 -->
        <TableRow>
            <Button android:text="AC" android:backgroundTint="#A5A5A5" android:textColor="#000000" />
            <Button android:text="+/-" android:backgroundTint="#A5A5A5" android:textColor="#000000" />
            <Button android:text="%" android:backgroundTint="#A5A5A5" android:textColor="#000000" />
            <Button android:text="÷" android:backgroundTint="#FF9500" android:textColor="#FFFFFF" />
        </TableRow>

        <!-- Hàng 2 -->
        <TableRow>
            <Button android:text="7" android:backgroundTint="#333333" android:textColor="#FFFFFF" />
            <Button android:text="8" android:backgroundTint="#333333" android:textColor="#FFFFFF" />
            <Button android:text="9" android:backgroundTint="#333333" android:textColor="#FFFFFF" />
            <Button android:text="×" android:backgroundTint="#FF9500" android:textColor="#FFFFFF" />
        </TableRow>

        <!-- Hàng 3 -->
        <TableRow>
            <Button android:text="4" android:backgroundTint="#333333" android:textColor="#FFFFFF" />
            <Button android:text="5" android:backgroundTint="#333333" android:textColor="#FFFFFF" />
            <Button android:text="6" android:backgroundTint="#333333" android:textColor="#FFFFFF" />
            <Button android:text="-" android:backgroundTint="#FF9500" android:textColor="#FFFFFF" />
        </TableRow>

        <!-- Hàng 4 -->
        <TableRow>
            <Button android:text="1" android:backgroundTint="#333333" android:textColor="#FFFFFF" />
            <Button android:text="2" android:backgroundTint="#333333" android:textColor="#FFFFFF" />
            <Button android:text="3" android:backgroundTint="#333333" android:textColor="#FFFFFF" />
            <Button android:text="+" android:backgroundTint="#FF9500" android:textColor="#FFFFFF" />
        </TableRow>

        <!-- Hàng 5 -->
        <TableRow>
            <Button
                android:text="0"
                android:layout_span="2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:backgroundTint="#333333"
                android:textColor="#FFFFFF" />
            <Button android:text="," android:backgroundTint="#333333" android:textColor="#FFFFFF" />
            <Button android:text="=" android:backgroundTint="#FF9500" android:textColor="#FFFFFF" />
        </TableRow>
    </TableLayout>
</LinearLayout>
