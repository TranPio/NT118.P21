<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/bai4"
    android:orientation="vertical"
    android:weightSum="10"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="8dp"
    android:background="#EEFBE2">

    <EditText
        android:id="@+id/edtResult"
        android:layout_weight="3"
        android:text="0"
        android:gravity="right|center_vertical"
        android:textSize="60sp"
        android:background="#00FFFFFF"
        android:textColor="#000000"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:inputType="none"
        android:focusable="false"
        android:cursorVisible="false" />

    <TableLayout
        android:layout_weight="7"
        android:stretchColumns="*"
        android:layout_width="match_parent"
        android:layout_height="0dp">

        <!-- Hàng 1 -->
        <TableRow
            android:layout_height="0dp"
            android:layout_weight="1">
            <Button
                android:text="%"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:textColor="#020202"
                android:textSize="30sp"
                android:layout_height="match_parent"
                android:backgroundTint="#E6EEDD"/>
            <Button
                android:text="CE"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:textColor="#020202"
                android:textSize="30sp"
                android:layout_height="match_parent"
                android:backgroundTint="#E6EEDD"/>
            <Button
                android:text="C"
                android:textColor="#020202"
                android:textSize="30sp"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:backgroundTint="#E6EEDD"/>
            <Button
                android:text="⌫"
                android:textColor="#020202"
                android:textSize="30sp"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:backgroundTint="#E6EEDD"/>
        </TableRow>

        <!-- Hàng 2 -->
        <TableRow
            android:layout_height="0dp"
            android:layout_weight="1">
            <Button
                android:text="1/x"
                android:textColor="#020202"
                android:textSize="30sp"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:backgroundTint="#E6EEDD"/>
            <Button
                android:text="x²"
                android:textColor="#020202"
                android:textSize="30sp"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:backgroundTint="#E6EEDD"/>
            <Button
                android:text="√x"
                android:textColor="#020202"
                android:textSize="30sp"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:backgroundTint="#E6EEDD"/>
            <Button
                android:text="÷"
                android:textColor="#020202"
                android:textSize="30sp"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:backgroundTint="#E6EEDD"/>
        </TableRow>

        <!-- Hàng 3 -->
        <TableRow
            android:layout_height="0dp"
            android:layout_weight="1">
            <Button
                android:text="7"
                android:textColor="#020202"
                android:textSize="30sp"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:backgroundTint="#FFFFFF"/>
            <Button
                android:text="8"
                android:textColor="#020202"
                android:textSize="30sp"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:backgroundTint="#FFFFFF"/>
            <Button
                android:text="9"
                android:textColor="#020202"
                android:textSize="30sp"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:backgroundTint="#FFFFFF"/>
            <Button
                android:text="×"
                android:textColor="#020202"
                android:textSize="30sp"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:backgroundTint="#E6EEDD"/>
        </TableRow>

        <!-- Hàng 4 -->
        <TableRow
            android:layout_height="0dp"
            android:layout_weight="1">
            <Button
                android:text="4"
                android:textColor="#020202"
                android:textSize="30sp"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:backgroundTint="#FFFFFF"/>
            <Button
                android:text="5"
                android:textColor="#020202"
                android:textSize="30sp"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:backgroundTint="#FFFFFF"/>
            <Button
                android:text="6"
                android:textColor="#020202"
                android:textSize="30sp"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:backgroundTint="#FFFFFF"/>
            <Button
                android:text="-"
                android:textColor="#020202"
                android:textSize="30sp"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:backgroundTint="#E6EEDD"/>
        </TableRow>

        <!-- Hàng 5 -->
        <TableRow
            android:layout_height="0dp"
            android:layout_weight="1">
            <Button
                android:text="1"
                android:textColor="#020202"
                android:textSize="30sp"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:backgroundTint="#FFFFFF"/>
            <Button
                android:text="2"
                android:textColor="#020202"
                android:textSize="30sp"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:backgroundTint="#FFFFFF"/>
            <Button
                android:textColor="#020202"
                android:textSize="30sp"
                android:text="3" :layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:backgroundTint="#FFFFFF"/>
            <Button
                android:text="+"
                android:textColor="#020202"
                android:textSize="30sp"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:backgroundTint="#E6EEDD"/>
        </TableRow>

        <!-- Hàng 6 -->
        <TableRow
            android:layout_height="0dp"
            android:layout_weight="1">
            <Button
                android:textColor="#020202"
                android:textSize="30sp"
                android:text="+/-"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:backgroundTint="#FFFFFF"/>
            <Button
                android:textColor="#020202"
                android:textSize="30sp"
                android:text="0"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:backgroundTint="#FFFFFF"/>
            <Button
                android:textColor="#020202"
                android:textSize="30sp"
                android:text="."
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:backgroundTint="#FFFFFF"/>
            <Button
                android:textSize="40sp"
                android:text="="
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:backgroundTint="#0061FA"
                android:textColor="#FFFFFF"/>
        </TableRow>
    </TableLayout>
</LinearLayout>
