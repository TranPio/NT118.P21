<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/bai4"
    android:weightSum="10"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="8dp"
    android:background="#000000">

    <!-- Display -->
    <EditText
        android:id="@+id/edtResult"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:gravity="end|center_vertical"
        android:text="0"
        android:textSize="60sp"
        android:textColor="#FFFFFF"
        android:background="@android:color/transparent"
        android:inputType="none"
        android:focusable="false"
        android:cursorVisible="false"/>

    <!-- Button Grid -->
    <GridLayout
        android:id="@+id/gridButtons"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="8"
        android:columnCount="4"
        android:rowCount="5"
        android:padding="4dp">

        <!-- First Row -->
        <include layout="@layout/key_gray" android:tag="AC"/>
        <include layout="@layout/key_gray" android:tag="+/-"/>
        <include layout="@layout/key_gray" android:tag="%"/>
        <include layout="@layout/key_orange" android:tag="รท"/>

        <!-- Second Row -->
        <include layout="@layout/key_dark" android:tag="7"/>
        <include layout="@layout/key_dark" android:tag="8"/>
        <include layout="@layout/key_dark" android:tag="9"/>
        <include layout="@layout/key_orange" android:tag="ร"/>

        <!-- Third Row -->
        <include layout="@layout/key_dark" android:tag="4"/>
        <include layout="@layout/key_dark" android:tag="5"/>
        <include layout="@layout/key_dark" android:tag="6"/>
        <include layout="@layout/key_orange" android:tag="-"/>

        <!-- Fourth Row -->
        <include layout="@layout/key_dark" android:tag="1"/>
        <include layout="@layout/key_dark" android:tag="2"/>
        <include layout="@layout/key_dark" android:tag="3"/>
        <include layout="@layout/key_orange" android:tag="+"/>

        <!-- Fifth Row -->
        <include layout="@layout/key_dark" android:tag="0"/>
        <include layout="@layout/key_dark" android:tag=","/>
        <include layout="@layout/key_orange" android:tag="="/>
    </GridLayout>
</LinearLayout>
