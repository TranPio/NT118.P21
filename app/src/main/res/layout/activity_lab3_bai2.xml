<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#000000"
    android:padding="4dp"
    tools:context=".lab3_bai2">

    <!-- Khu vực hiển thị kết quả -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="4"
        android:orientation="vertical"
        android:gravity="bottom">

        <TextView
            android:id="@+id/tvResultLab3Bai2"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:gravity="end|bottom"
            android:text="0"
            android:textColor="#FFFFFF"
            android:background="@android:color/transparent"
            android:maxLines="2"
            android:ellipsize="end"
            android:paddingEnd="10dp"
            android:paddingStart="10dp"
            android:paddingBottom="5dp"
            android:autoSizeTextType="uniform"
            android:autoSizeMinTextSize="20sp"
            android:autoSizeMaxTextSize="50sp"
            android:autoSizeStepGranularity="2sp" />

        <!-- Dòng chứa nút DELETE và khoảng trống -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:weightSum="3"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <!-- Khoảng trống màu đen bên trái -->
            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:background="#000000" />

            <!-- Nút DELETE bên phải -->
            <Button
                android:id="@+id/btnDeleteLab3Bai2"
                style="@style/KeyLab3Delete"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_gravity="center_vertical"
                android:layout_margin="2dp"
                android:minHeight="60dp"
                android:text="DELETE" />
        </LinearLayout>
    </LinearLayout>

    <!-- GridLayout chứa các nút -->
    <GridLayout
        android:id="@+id/gridKeysLab3Bai2"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="6"
        android:columnCount="4"
        android:rowCount="4"
        android:paddingTop="4dp">

        <!-- Hàng 1 -->
        <Button android:text="7" style="@style/KeyLab3Number" />
        <Button android:text="8" style="@style/KeyLab3Number" />
        <Button android:text="9" style="@style/KeyLab3Number" />
        <Button android:text="÷" style="@style/KeyLab3Operator" />

        <!-- Hàng 2 -->
        <Button android:text="4" style="@style/KeyLab3Number" />
        <Button android:text="5" style="@style/KeyLab3Number" />
        <Button android:text="6" style="@style/KeyLab3Number" />
        <Button android:text="×" style="@style/KeyLab3Operator" />

        <!-- Hàng 3 -->
        <Button android:text="1" style="@style/KeyLab3Number" />
        <Button android:text="2" style="@style/KeyLab3Number" />
        <Button android:text="3" style="@style/KeyLab3Number" />
        <Button android:text="-" style="@style/KeyLab3Operator" />

        <!-- Hàng 4 -->
        <Button android:text="." style="@style/KeyLab3Number" />
        <Button android:text="0" style="@style/KeyLab3Number" />
        <Button android:text="=" style="@style/KeyLab3Operator" />
        <Button android:text="+" style="@style/KeyLab3Operator" />
    </GridLayout>
</LinearLayout>
