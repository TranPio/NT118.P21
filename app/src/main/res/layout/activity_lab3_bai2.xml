<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#000000"
    android:padding="2dp"
    tools:context=".lab3_bai2">

    <TextView
        android:id="@+id/tvResultLab3Bai2"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3"
        android:gravity="end|center_vertical"
        android:text="0"
        android:textColor="#FFFFFF"
        android:background="@android:color/transparent"
        android:maxLines="2"
        android:ellipsize="end"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:paddingBottom="10dp"
        android:autoSizeTextType="uniform"
        android:autoSizeMinTextSize="24sp"
        android:autoSizeMaxTextSize="60sp"
        android:autoSizeStepGranularity="2sp" />

    <GridLayout
        android:id="@+id/gridKeysLab3Bai2"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="7"
        android:columnCount="4"
        android:rowCount="5"
        android:alignmentMode="alignMargins"
        android:useDefaultMargins="false"
        android:horizontalSpacing="2dp"
        android:verticalSpacing="2dp"
        android:padding="2dp">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_columnWeight="4"
            android:layout_rowWeight="1"
            android:layout_columnSpan="4"
            android:layout_gravity="fill"
            android:orientation="horizontal"
            android:weightSum="3"
            android:baselineAligned="false">
            <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:background="#333333" />
            <Button
            android:id="@+id/btnDeleteLab3Bai2"
            style="@style/KeyLab3Delete"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
                android:textSize="21sp"
            android:layout_marginStart="2dp" android:text="DELETE" />

        </LinearLayout>

        <Button android:text="@string/seven" style="@style/KeyLab3Number" />
        <Button android:text="@string/eight" style="@style/KeyLab3Number" />
        <Button android:text="@string/nine" style="@style/KeyLab3Number" />
        <Button android:text="@string/divide" style="@style/KeyLab3Operator" />

        <Button android:text="@string/four" style="@style/KeyLab3Number" />
        <Button android:text="@string/five" style="@style/KeyLab3Number" />
        <Button android:text="@string/six" style="@style/KeyLab3Number" />
        <Button android:text="@string/multiply" style="@style/KeyLab3Operator" />

        <Button android:text="@string/one" style="@style/KeyLab3Number" />
        <Button android:text="@string/two" style="@style/KeyLab3Number" />
        <Button android:text="@string/three" style="@style/KeyLab3Number" />
        <Button android:text="@string/subtract" style="@style/KeyLab3Operator" />

        <Button android:text="@string/dot" style="@style/KeyLab3Number" />
        <Button android:text="@string/zero" style="@style/KeyLab3Number" />
        <Button android:text="@string/equal" style="@style/KeyLab3Operator" />
        <Button android:text="@string/plus" style="@style/KeyLab3Operator" />
    </GridLayout>

</LinearLayout>