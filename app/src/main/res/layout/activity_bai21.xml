<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:weightSum="10"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5">

    <TextView
        android:layout_weight="2"
        android:text="CẬP NHẬT THÔNG TIN CÁ NHÂN"
        android:gravity="center"
        android:textSize="32sp"
        android:textStyle="bold"
        android:textColor="#FFFFFF"
        android:background="#4170F4"
        android:layout_width="match_parent"
        android:layout_height="0dp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="8"
        android:padding="24dp">

        <LinearLayout
            android:id="@+id/cot1"
            android:layout_width="100dp"
            android:layout_height="192dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentBottom="true"
            android:layout_marginTop="24dp"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="63dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="39dp"
                android:layout_marginBottom="16dp"
                android:text="CMND:"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="96dp"
                android:layout_height="44dp"
                android:layout_marginBottom="16dp"
                android:text="Số điện thoại:"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:text="Địa chỉ:"
                android:textSize="20sp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/cot2"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_toEndOf="@id/cot1"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="16dp"
            android:orientation="vertical">

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Nhập CMND"
                android:textSize="18sp"
                android:layout_marginBottom="16dp" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Nhập số điện thoại"
                android:textSize="18sp"
                android:layout_marginBottom="16dp" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Nhập địa chỉ"
                android:textSize="18sp" />
        </LinearLayout>

        <ImageView
            android:id="@+id/cot3"
            android:layout_width="137dp"
            android:layout_height="169dp"
            android:layout_alignTop="@id/cot2"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="16dp"
            android:scaleType="centerCrop"
            android:src="@drawable/pio" />

        <Button
            android:id="@+id/capnhat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/cot2"
            android:layout_alignStart="@id/cot2"
            android:layout_marginTop="10dp"
            android:text="Cập nhật"
            android:textSize="18sp" />

        <Button
            android:id="@+id/lamlai"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/capnhat"
            android:layout_toEndOf="@id/capnhat"
            android:layout_marginStart="10dp"
            android:text="Làm lại"
            android:textSize="18sp" />
    </RelativeLayout>
</LinearLayout>